<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/basex15"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/all_messages_profile_image"
            android:layout_width="@dimen/basex85"
            android:layout_height="@dimen/basex85"
            android:src="@drawable/default_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/basex5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/all_messages_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:layout_marginTop="@dimen/basex10"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/online_status"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="@dimen/basex25"
                    android:src="@mipmap/online"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/all_messages_mes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="message"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>